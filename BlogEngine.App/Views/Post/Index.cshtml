@model PostViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row g-5">
    <div class="col-md-8">
        <h3 class="pb-4 mb-4 fst-italic border-bottom">
            Blog
        </h3>

        <article class="blog-post">
            <h2 class="blog-post-title">@Model.CurrentPost.Title</h2>
            <p class="blog-post-meta">@Model.CurrentPost.CreateDate by <a href="https://getbootstrap.com/docs/5.0/examples/blog/#">@Model.CurrentPost.Author</a></p>
            <hr>
            @Html.Raw(@Model.CurrentPost.Content)
             
            <img src="@Model.CurrentPost.PostImage" class="img-fluid"/>
        </article>

    </div>

    <div class="col-md-4">
        <div class="position-sticky" style="top: 2rem;">
            <div class="p-4 mb-3 bg-light rounded">
                <h4 class="fst-italic">About</h4>
                <p class="mb-0">.NET Developer, aprendiendo y aportando un poco de ello.</p>
            </div>

            <div class="p-4">
                <h4 class="fst-italic">Enlaces</h4>
                <ol class="list-unstyled">
                    <li><a href="https://github.com/erickvazquezi">GitHub</a></li>
                    <li><a href="https://twitter.com/erickvazquezi">Twitter</a></li>
                </ol>
            </div>
        </div>
    </div>


</div>